<!DOCTYPE html>
 
<head>
	<h1 style="color:red;">Electricity Bill Calculator</h1>
</head>
 
<?php
$result_str = $result = '';
if (isset($_POST['unit-submit'])) {
    $units = $_POST['units'];
    if (!empty($units)) {
		echo '<body style="background-color:black">';
        $result = calculate_bill($units);
        $result_str = "<font color='blue'>Total amount of " . $units . 'units  = ' . $result;
    }
}

function calculate_bill($units) {
    $unit_cost_first = 9;
    $unit_cost_second = 12;
    $unit_cost_third = 15;
    
 
    if($units <= 50) {
        $bill = $units * $unit_cost_first;
    }
    else if($units > 50 && $units <= 100) {
        $temp = 50 * $unit_cost_first;
        $remaining_units = $units - 50;
        $bill = $temp + ($remaining_units * $unit_cost_second);
    }
    
    else {
        $temp = (50 * $unit_cost_first) + (100 * $unit_cost_second);
        $remaining_units = $units - 100;
        $bill = $temp + ($remaining_units * $unit_cost_fourth);
    }
    return number_format((float)$bill, 2, '.', '');
}
 
?>
 
<body>

	<div id="page-wrap">
		
		
		<form action="" method="post" id="quiz-form">            
            	<input type="number" name="units" id="units" placeholder="Please enter no. of Units" />            
            	<input type="submit" name="unit-submit" id="unit-submit" value="calculate" />		
		</form>
 
		<div>
		    <?php echo '<br />' . $result_str; ?>
		</div>	
	</div>
</body>
</html>
